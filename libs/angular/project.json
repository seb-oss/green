{
  "name": "angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/angular/src",
  "prefix": "green",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/angular"],
      "options": {
        "project": "libs/angular/ng-package.json",
        "tsConfig": "libs/angular/tsconfig.lib.prod.json",
        "updateBuildableProjectDepsInPackageJson": false
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/angular"],
      "options": {
        "jestConfig": "libs/angular/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/angular/src/**/*.ts",
          "libs/angular/src/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4100,
        "host": "0.0.0.0",
        "configDir": "libs/angular/.storybook",
        "browserTarget": "angular:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputDir": "dist/storybook/angular",
        "configDir": "libs/angular/.storybook",
        "browserTarget": "angular:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "update-deps-and-release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run angular:update-dependencies && nx run angular:version-and-release"
          }
        ]
      }
    },
    "update-dependencies": {
      "executor": "@sebgroup/repo-tools:update-lib-deps",
      "options": {}
    },
    "version-and-release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "commitMessageFormat": "chore(${projectName}): release version ${version}",
        "tagPrefix": "@sebgroup/green-${projectName}@",
        "push": true,
        "postTargets": ["angular:publish", "angular:github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production"
      }
    }
  }
}
