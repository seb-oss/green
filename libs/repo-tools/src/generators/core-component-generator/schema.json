{
  "$schema": "http://json-schema.org/schema",
  "$id": "CoreComponentGenerator",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Name of the component (all lower case, no spaces, dash separated)"
    },
    "is_form_control": {
      "type": "boolean",
      "description": "Whether to extend GdsFormControl or LitElement",
      "default": false,
      "x-prompt": {
        "message": "Is the component a form control?",
        "type": "boolean",
        "$default": false
      }
    },
    "sub_path": {
      "type": "string",
      "description": "",
      "x-prompt": {
        "message": "What type of component is it?",
        "type": "list",
        "items": [
          {
            "value": "components",
            "label": "Component (external, public api)"
          },
          {
            "value": "primitives",
            "label": "Primitive (internal use only)"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
