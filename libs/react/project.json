{
  "name": "react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/react/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/react",
        "packageJson": "libs/react/package.json",
        "tsConfig": "libs/react/tsconfig.lib.json",
        "project": "libs/react/package.json",
        "entryFile": "libs/react/src/index.ts",
        "external": ["react/jsx-runtime"],

        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "updateBuildableProjectDepsInPackageJson": false,
        "assets": [
          {
            "glob": "libs/react/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "babelUpwardRootMode": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/react/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/react"],
      "options": {
        "jestConfig": "libs/react/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4200,
        "configDir": "libs/react/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build-with-types-and-scoping",
          "dependencies": true
        }
      ]
    },
    "build-nx-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/react",
        "configDir": "libs/react/.storybook",
        "outputDir": "dist/storybook/react"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build-with-types-and-scoping",
          "dependencies": true
        }
      ]
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "NODE_ENV=production nx run react:build-nx-storybook"
          }
        ]
      }
    },
    "update-deps-and-release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run react:update-dependencies && nx run react:version-and-release"
          }
        ]
      }
    },
    "update-dependencies": {
      "executor": "@sebgroup/repo-tools:update-lib-deps",
      "options": {}
    },
    "version-and-release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "commitMessageFormat": "chore({projectName}): release version ${version}",
        "tagPrefix": "@sebgroup/green-{projectName}@",
        "push": true,
        "postTargets": ["react:publish", "react:github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  }
}
