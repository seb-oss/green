{
  "name": "react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/react/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "npx copyfiles -f libs/react/package.json dist/libs/react"
      },
      "dependsOn": ["rollup", "generate-core-wrappers"]
    },
    "generate-core-wrappers": {
      "executor": "nx:run-commands",
      "dependsOn": ["core:build-custom-elements-json"],
      "options": {
        "command": "node libs/core/build-scripts/generate-react.cjs"
      }
    },
    "rollup": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["{projectRoot}/**/*"],
      "options": {
        "outputPath": "dist/libs/react",
        "tsConfig": "libs/react/tsconfig.lib.json",
        "project": "libs/react/package.json",
        "entryFile": "libs/react/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": [
          "@nx/react/plugins/bundle-rollup",
          "libs/react/rollup.config.mjs"
        ],
        "assets": [
          {
            "glob": "(README.md)",
            "input": "libs/react",
            "output": "."
          }
        ],
        "babelUpwardRootMode": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/react"],
      "options": {
        "jestConfig": "libs/react/jest.config.ts"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4401,
        "configDir": "libs/react/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        },
        "tokens:build"
      ]
    },
    "build-nx-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/react",
        "configDir": "libs/react/.storybook",
        "outputDir": "dist/storybook/react"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        },
        "tokens:build"
      ]
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/react",
        "configDir": "libs/react/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        },
        "tokens:build"
      ]
    },
    "copy-designlibrary-json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx copyfiles -f libs/react/.storybook/designlibrary.json dist/storybook/react"
      }
    },
    "update-dependencies": {
      "executor": "@sebgroup/repo-tools:update-lib-deps",
      "options": {}
    }
  }
}
