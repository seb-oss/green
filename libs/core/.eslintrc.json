{
  "extends": ["../../.eslintrc.json"],
  "rules": {
    "no-console": "error"
  },
  "ignorePatterns": [
    "!**/*",
    "storybook-static",
    "setup-jest.js",
    "*.stories.ts",
    "*.tsx",
    "*.stories.tsx",
    "*.test.ts",
    ".storybook/*",
    "src/bin/*"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-unused-expressions": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["build-scripts/**/*.ts"],
      "rules": {
        "no-console": "off",
        "@nx/enforce-module-boundaries": "off"
      }
    }
  ]
}
