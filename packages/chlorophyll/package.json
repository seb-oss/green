  "scripts": {
    "dev": "concurrently --kill-others 'yarn watch:tokens'",
    "lint": "stylelint --config-basedir ../../ src/**/*.scss",
    "lint:fix": "stylelint --config-basedir ../../ src/**/*.scss --fix",
    "test": "jest",
    "generate": "ts-node ./build/generate",
    "prebuild": "yarn generate",
    "postinstall": "yarn generate",
    "watch:tokens": "watch 'yarn generate' ./src/tokens",
    "compile:scss": "sass src/scss/index.scss dist/green-chlorophyll.css",
    "watch:scss": "sass --watch src/scss/index.scss ../chlorophyll-storybook/public/green-chlorophyll.css",
    "build": "yarn compile:scss",
    "serve": "yarn build && sirv . --no-clear"
  },
  "bugs": {
    "url": "https://github.com/sebgroup/green/issues"
  },
  "devDependencies": {
    "@types/node": "^15.6.2",
